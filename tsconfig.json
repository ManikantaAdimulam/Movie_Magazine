{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017", "dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@redux/*": ["redux/*"],
      "@utils/*": ["utils/*"],
      "@navigation": ["navigation/*"]
    }
  },
  "include": [
    "src/**/*",
    "react-native.config.js",
    "codegen.js",
    "./index.js",
    "custom.d.ts"
  ],
  "exclude": ["node_modules"]
}
